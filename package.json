{
  "name": "collaborative-whiteboard",
  "version": "1.0.0",
  "description": "Real-time collaborative whiteboard application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-deps": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "dependencies": {
    "next": "14.0.0",
    "react": "^18",
    "react-dom": "^18",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "mongodb": "^6.3.0",
    "@radix-ui/react-slider": "^1.1.2",
    "lucide-react": "^0.294.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "concurrently": "^8.2.2"
  }
}
